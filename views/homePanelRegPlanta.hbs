<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    

    <title>Panel administrativo-registro</title>
    {{> header}}


</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion bg-danger imagenAtras" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/panelhome">
                <div class="sidebar-brand-icon rotate-n-15">
                    
                </div>
                <div class="sidebar-brand-text mx-3">Crystal-Aqua</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">


            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Panel Administrativo
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="/panelhome" >
                    <i style="color: rgb(255, 255, 255);" class="fas fa-fw fa-table"></i>
                    <span style="color: rgb(255, 255, 255); font-weight: bold; font-size: 15px;">Sistemas Acuapónicos</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-5 static-top shadow">


                    
                    <div class="">
                        <!--contenedor del header y que se visualice bien-->
                        <div class="borde-header">
                            <div class="">
                              <header class="d-flex justify-content-between align-items-center py-3 border-bottom">
                                <img src="resources/img/logo/logo.jpg" width="50px" height="50px" class="mr-3">     
                              </header>
                            </div>
                        </div> 
                    </div>


                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav mr-lg-5 ml-auto">
                        <li class="nav-item"><a href="/panelhome" class="px-2 link_header_secondary">Panel de Administrador</a></li>
                        <li class="nav-item"><a href="/panelhomeperfil" class="px-2 link_header">Perfil</a></li>
                        <li class="nav-item">
                            <a href="#" class="px-2 link_header_secondary" onclick="confirmarCerrarSesion()">Cerrar sesión</a>
                        </li>
                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Agregar Sistema Acuapónico</h1>
                        
                    </div>
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-3">
                          <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                              <form class="mx-1 mx-md-4">
              
                                <div class="d-flex flex-row align-items-center mb-4">
                                  <div class="form-outline flex-fill mb-0">
                                    <h5 style="margin-top: 20px;">Tipo de planta:</h5>
                                    <input type="text" id="nombreP" class="form-control" />
                                    <label class="form-label" for="nombreP"></label>
                                  </div>
                                </div>
              
                                <div class="d-flex flex-row align-items-center mb-4">
                                  <div class="form-outline flex-fill mb-0">
                                    <h5>Tamaño de la pecera:</h5>
                                    <input type="text" id="ip" class="form-control" />
                                    <label class="form-label" for="ip"></label>
                                  </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <div class="form-outline flex-fill mb-0">
                                      <h5>Cantidad de peces:</h5>
                                      <input type="text" id="ip" class="form-control" />
                                      <label class="form-label" for="ip"></label>
                                    </div>
                                  </div>            
                              
                                <div class="d-flex justify-content-between mx-3 mb-3 mb-lg-4">
                                    <a href="/panelhome"><button type="button" class="btn btn-primary btn-lg" style="background-color: red;">Cancelar</button></a>
                                    <a href="#"><button type="submit"  class="btn btn-primary btn-lg">Aceptar</button></a>  
                                    
                                </div>
                               <!-- <div style="padding-top: 20px;" id="resultado-registro">
                                    Se agrego exitosamente
                                    <img style="padding-left: 10%;" width="70px" height="50px" src="/imagen/rechazado.png">
                                </div>-->
                              </form>
                              
                            </div>
                            
                          </div>
                        </div>
                      </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->

           {{> panelhomefooter}}
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    {{> panelhomefooter_sig}}
    <script>
  function confirmarCerrarSesion() {
    // Muestra un cuadro de diálogo de confirmación
    const confirmacion = confirm('¿Estás seguro de que quieres cerrar la sesión?');

    // Si el usuario hace clic en "Aceptar", redirige a la ruta de cerrar sesión
    if (confirmacion) {
      window.location.href = '/cerrarsesion';
    }
  }
</script>
</body>

</html>